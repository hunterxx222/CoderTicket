<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'>
  <h2>Create A New Venue</h2>
</div>

<% if @venue.errors.present? %>
  <div class="alert alert-danger"><%= @venue.errors.full_messages.to_sentence %></div>
<% end %>

<div class="container">
    <div class="form-inputs">
	<%= form_for @venue, url: venues_path do |f| %>
		<div class="form-group">
		<%= f.text_field :name, placeholder: "Name", :class => "form-control" %>
		</div>
		<div class="form-group">
		<%= f.text_field :full_address, placeholder: "Full Address", :class => "form-control" %>
		</div>
		<div class="form-group">
		<%= f.text_field :region_id, placeholder: "Region Id", :class => "form-control" %>
		</div>
		<div class="form-action">
		<%= f.submit "Publish Venue", :class => "btn btn-primary" %>
		</div>
	<% end %>
	</div>
</div>
